<div class="row justify-content-center mt-4 mb-4">
  <div class="col-xl-6">
		<%= form_with(model: @candidate, local: true, id: "new_candidate") do |f| %>

      <div class="form-group">
        <%= f.label :"Applying_for:", class:"col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.collection_select(:job_id, Job.all, :id, :title, {include_blank: false}, {class:"form-select form-select w-100"}) %>

          <!-- <%= f.collection_select(:job_id, Job.order(:title),:id,:title, include_blank: false, class: "form-control") %> -->
        </div>
      </div>

      <div class="form-group">
        <%= f.label :"name:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.text_field :name, class: "form-control", placeholder: "Candidate name" %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :"phone:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.number_field :phone, class: "form-control", placeholder: "Phone number" %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :"email:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.email_field :email, class: "form-control", placeholder: "Email id"
          %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :"skill:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.text_field :skill, class: "form-control", placeholder: "Skill set"
          %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :"work_experience:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.text_field :work_experience, class: "form-control", placeholder:
          "Work experience" %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :"ctc:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.text_field :ctc, class: "form-control", placeholder: "CTC" %>
        </div>
      </div>
  
      <div class="form-group">
        <%= f.label :"notice_period:", class: "col-sm-12 col-form-label" %>
        <div class="col-sm-12">
          <%= f.text_field :notice_period, class: "form-control", placeholder:
          "Notice Period" %>
        </div>
      </div>

      <div class="form-group justify-content-center mt-4">
        <%= f.submit class: "btn btn-outline-info" %>
      </div>
    <% end %>
  </div>
</div>