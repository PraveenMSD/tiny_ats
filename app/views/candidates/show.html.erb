<div class="row justify-content-md-center mt-4" id="articleShowPage">
  <div class="col-8">
    <div class="card text-center shadow mb-5 bg-white rounded">

      <div class="card-body">
        <%= link_to candidate_path(@candidate.id) do %>
          <h3 class="text-dark title mt-3 mb-2 d-flex flex-column bd-highlight mb-3">
            <strong>
              <%= truncate(strip_tags(@candidate.name.to_s), length: 38) %>
            </strong>
          </h3>
            <% end %>

            <div class='some-page-wrapper'>
              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    Email:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <%= simple_format(@candidate.email) %>
                  </div>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    Phone:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <%= simple_format(@candidate.phone) %>
                  </div>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    Job id:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <%= @candidate.job_id %>
                  </div>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    Skill:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <%= simple_format(@candidate.skill) %>
                  </div>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    Work experirence:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <%= simple_format(@candidate.work_experience) %>
                  </div>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    CTC:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <%= simple_format(@candidate.ctc) %>
                  </div>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='column'>
                  <div class='blue-column'>
                    Notice period:
                  </div>
                </div>
                <div class='column'>
                  <div class='green-column'>
                    <% if @candidate.notice_period == "" %>
                      --
                    <% else %>
                      <%= @candidate.notice_period %>
                    <% end %>
                  </div>
                </div>
              </div>

            </div>

            <%= link_to "Edit" , edit_candidate_path(@candidate), class: "btn btn-outline-info" %>
            <%= link_to "Delete" , candidate_path(@candidate), class: "btn btn-outline-danger" %>
      </div>

      <div class="card-footer">

        <a class="btn mb-4" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
          <i class="fa fa-comments" aria-hidden="true"> </i>
            <%= @candidate.comments.count %>
        </a>

        
        <% if @candidate.comments.present? || signed_in? %>
          <div class="collapse" id="collapseExample">
            <div class="card card-body comment-form">
              <%= render 'comments/comment' %>

            </div>
          </div>
          <% if signed_in? %>

            <div class="collapse" id="collapseExample">
              <div class="card card-body my-4">
                <%= render 'comments/form' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      </div>
    </div>
  </div>
  </div>